---
/**
 * AdminSidebar - Persistent admin navigation
 * 
 * Visible on ALL pages when admin is authenticated.
 * Squishes content to the right.
 */

import { checkAdminAuth } from '@lib/admin-auth';

interface Props {
  currentPath?: string;
}

const { currentPath = Astro.url.pathname } = Astro.props;

// Check if user is authenticated
const auth = checkAdminAuth(Astro.request);
const isAuthenticated = auth.valid;

// Inline icon paths (same as AdminIcon.astro) to avoid import/compiler issues
const iconPaths: Record<string, string> = {
  dashboard: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />`,
  posts: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />`,
  media: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />`,
  works: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`,
  products: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />`,
  pages: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />`,
};

// Admin navigation items
const adminNavItems = [
  { href: '/admin', label: 'Dashboard', icon: 'dashboard' },
  { href: '/admin/media', label: 'Media', icon: 'media' },
  { href: '/admin/works', label: 'Works', icon: 'works' },
  { href: '/admin/pages', label: 'Pages', icon: 'pages' },
  { href: '/admin/products', label: 'Shop', icon: 'products' },
];

// Check if current path matches nav item
const isActive = (href: string) => {
  if (href === '/admin') {
    return currentPath === '/admin' || currentPath === '/admin/';
  }
  return currentPath.startsWith(href);
};
---

{isAuthenticated && (
  <>
    {/* Admin Sidebar */}
    <aside 
      id="admin-sidebar"
      class="fixed left-0 top-0 h-screen w-64 bg-black text-white z-[100]"
    >
      {/* Header */}
      <div class="flex items-center justify-between p-4 border-b border-gray-800">
        <a href="/admin" class="text-lg font-bold tracking-tight">
          she_skin
        </a>
        <span class="text-xs text-gray-500 uppercase tracking-wider">Admin</span>
      </div>

      {/* Navigation */}
      <nav class="p-2">
        <ul class="space-y-1">
          {adminNavItems.map((item) => (
            <li>
              <a
                href={item.href}
                class={`
                  flex items-center gap-3 px-3 py-2 rounded-md text-sm transition-colors
                  ${isActive(item.href) 
                    ? 'bg-white text-black' 
                    : 'text-gray-300 hover:bg-gray-800 hover:text-white'
                  }
                `}
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={iconPaths[item.icon] ?? ''} />
                <span>{item.label}</span>
              </a>
            </li>
          ))}
        </ul>
      </nav>

      {/* Divider */}
      <div class="mx-4 my-4 border-t border-gray-800" />

      {/* Secondary Actions */}
      <nav class="px-2">
        <ul class="space-y-1">
          <li>
            <a
              href="/"
              class="flex items-center gap-3 px-3 py-2 rounded-md text-sm text-gray-400 hover:bg-gray-800 hover:text-white transition-colors"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              <span>View Site</span>
            </a>
          </li>
          <li>
            <button
              id="admin-logout-btn"
              class="w-full flex items-center gap-3 px-3 py-2 rounded-md text-sm text-gray-400 hover:bg-red-900/50 hover:text-red-400 transition-colors text-left"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              <span>Logout</span>
            </button>
          </li>
        </ul>
      </nav>

    </aside>

    {/* Scripts */}
    <script is:inline>
      (function() {
        const logoutBtn = document.getElementById('admin-logout-btn');

        if (logoutBtn) {
          logoutBtn.addEventListener('click', async () => {
            if (!confirm('Are you sure you want to logout?')) return;

            try {
              const response = await fetch('/api/admin/logout', {
                method: 'POST',
                credentials: 'include',
              });
              if (response.ok) {
                window.location.href = '/admin/login?logged_out=1';
                return;
              }
              alert('Logout failed. Please try again.');
            } catch (err) {
              console.error('Logout error:', err);
              alert('Logout failed. Please try again.');
            }
          });
        }
      })();
    </script>
  </>
)}

