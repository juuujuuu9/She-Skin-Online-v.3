---
export const prerender = false;

import Layout from '@layouts/Layout.astro';
import { getHomepageVideo } from '@lib/db/queries';

// Load the selected homepage video from database
const homepageVideo = await getHomepageVideo();

// Fallback to the hardcoded URL if no video is selected
const videoUrl = homepageVideo?.url || 'https://www.sheskin.org/wp-content/uploads/2026/01/letter.mp4';
---

<Layout title="she_skin" transparentHeader={true} neonGreenMenu={true}>
  <main class="fixed inset-0 w-full h-full overflow-hidden">
    <video
      class="absolute inset-0 w-full h-full object-cover"
      src={videoUrl}
      autoplay
      muted
      loop
      playsinline
    />
  </main>
</Layout>
