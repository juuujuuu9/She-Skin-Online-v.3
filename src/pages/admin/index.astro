---
export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';
import FilePondUploader from '@components/admin/FilePondUploader.tsx';
import { loadManifest } from '@lib/upload-service';
import { db } from '@lib/db';
import { media } from '@lib/db/schema';
import { desc, isNull } from 'drizzle-orm';

// Auth is handled by middleware - if we reach this page, user is authenticated

// Load manifest for status counts
const manifest = await loadManifest();

// Get recent media from database
const recentMedia = await db.query.media.findMany({
  where: isNull(media.deletedAt),
  orderBy: [desc(media.createdAt)],
  limit: 12,
});

const formatBytes = (bytes: number) => {
  if (bytes < 1024) return bytes + ' B';
  if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
  return (bytes / 1024 / 1024).toFixed(1) + ' MB';
};

const toFullUrl = (url: string | undefined) => {
  if (!url) return '';
  if (url.startsWith('http')) return url;
  return `${import.meta.env.PUBLIC_CDN_URL || ''}${url}`;
};

const imageCount = recentMedia.filter(m => m.mediaType === 'image').length;
const audioCount = recentMedia.filter(m => m.mediaType === 'audio').length;
const videoCount = recentMedia.filter(m => m.mediaType === 'video').length;
---

<AdminLayout title="Uploads - she_skin Admin">
  <div class="px-6 py-6 flex-1 flex flex-col min-h-0 overflow-hidden">
    {/* Header */}
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-xl font-semibold text-white tracking-wide">UPLOADS</h1>
        <p class="text-sm text-gray-500 mt-0.5">UPLOAD FILES TO THE MEDIA LIBRARY</p>
      </div>
      <a 
        href="/admin/media" 
        class="text-sm text-blue-400 hover:text-blue-300 transition-colors flex items-center gap-1"
      >
        VIEW FULL MEDIA LIBRARY
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>

    {/* Main content grid */}
    <div class="flex-1 flex gap-6 min-h-0">
      {/* Left column - Upload */}
      <div class="w-80 flex flex-col gap-4">
        {/* Upload box */}
        <div class="bg-[#1a1a1a] rounded-lg border border-[#333] p-5">
          <h2 class="text-sm font-medium text-white mb-4">UPLOAD FILES</h2>
          
          <FilePondUploader
            client:load
            allowMultiple={true}
            maxFiles={50}
            onUploadComplete={() => window.location.reload()}
            variant="dropzone"
            labelIdle='Drag & drop files or <span class="filepond--label-action">Browse</span>'
          />
          
          <p class="text-[#555] text-xs mt-3 text-center">IMAGES, AUDIO, VIDEO â€¢ MAX 500MB EACH</p>
        </div>

        {/* Stats */}
        <div class="bg-[#1a1a1a] rounded-lg border border-[#333] p-4 flex items-center justify-around">
          <div class="text-center">
            <div class="text-2xl font-semibold text-white">{imageCount}</div>
            <div class="text-xs text-gray-500 mt-0.5">IMAGE</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-semibold text-white">{audioCount}</div>
            <div class="text-xs text-gray-500 mt-0.5">AUDIO</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-semibold text-white">{videoCount}</div>
            <div class="text-xs text-gray-500 mt-0.5">VIDEO</div>
          </div>
        </div>
      </div>

      {/* Right column - Recent uploads */}
      <div class="flex-1 bg-[#1a1a1a] rounded-lg border border-[#333] p-5 flex flex-col min-h-0">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-sm font-medium text-white">RECENT UPLOADS</h2>
          <div class="flex items-center gap-3">
            {/* Bulk delete button - hidden by default */}
            <button
              id="bulk-delete-btn"
              class="hidden items-center gap-1.5 px-3 py-1.5 bg-red-600 hover:bg-red-700 text-white text-xs font-medium rounded transition-colors"
            >
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              DELETE <span id="selected-count">0</span>
            </button>
            <label class="flex items-center gap-2 text-sm text-gray-400 cursor-pointer hover:text-white transition-colors">
              <input type="checkbox" id="select-all" class="w-4 h-4 rounded border-[#444] bg-[#222] text-blue-500 focus:ring-blue-500 focus:ring-offset-[#1a1a1a]" />
              SELECT ALL
            </label>
          </div>
        </div>

        <div class="flex-1 overflow-auto min-h-0">
          {recentMedia.length > 0 ? (
            <div class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3">
              {recentMedia.map((item) => (
                <div 
                  class="group relative bg-[#222] rounded-lg overflow-hidden border border-[#333] hover:border-[#555] transition-all"
                  data-media-id={item.id}
                >
                  <label class="absolute top-2 left-2 z-10 opacity-0 group-hover:opacity-100 transition-opacity">
                    <input 
                      type="checkbox" 
                      class="media-select w-4 h-4 rounded border-[#444] bg-[#222] text-blue-500 focus:ring-blue-500 focus:ring-offset-[#222]"
                      value={item.id}
                    />
                  </label>
                  
                  <button
                    class="delete-btn absolute top-2 right-2 z-10 p-1.5 bg-red-500/80 hover:bg-red-600 text-white rounded opacity-0 group-hover:opacity-100 transition-all"
                    data-id={item.id}
                    title="Delete"
                  >
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </button>

                  {item.mediaType === 'image' && item.variants?.sm?.url && (
                    <div class="aspect-square bg-[#111] flex items-center justify-center overflow-hidden">
                      <img
                        src={toFullUrl(item.variants.sm.url)}
                        alt={item.filename}
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                    </div>
                  )}
                  
                  {item.mediaType === 'audio' && (
                    <div class="aspect-square bg-gradient-to-br from-blue-900/20 to-indigo-900/20 flex flex-col items-center justify-center">
                      <svg class="w-10 h-10 text-blue-500/50 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                      </svg>
                      <span class="text-[10px] text-blue-400/70 uppercase tracking-wider">Audio</span>
                    </div>
                  )}
                  
                  {item.mediaType === 'video' && (
                    <div class="aspect-square bg-[#111] flex flex-col items-center justify-center">
                      <svg class="w-10 h-10 text-red-500/50 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                      </svg>
                      <span class="text-[10px] text-red-400/70 uppercase tracking-wider">Video</span>
                    </div>
                  )}

                  <div class="p-2.5 bg-[#1a1a1a]">
                    <p class="text-xs text-gray-400 truncate" title={item.filename}>{item.filename}</p>
                    <p class="text-[10px] text-gray-500 mt-0.5">{formatBytes(item.fileSize)}</p>
                  </div>
                </div>
              ))}
            </div>
          ) : (
            <div class="h-full flex flex-col items-center justify-center text-gray-500">
              <svg class="w-12 h-12 mb-3 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="text-sm">No uploads yet</p>
              <p class="text-xs mt-1 opacity-60">Files you upload will appear here</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  // Get CSRF token from cookie
  function getCsrfToken(): string {
    const match = document.cookie.match(/csrf_token=([^;]+)/);
    return match ? decodeURIComponent(match[1]) : '';
  }

  // Selection state
  const selectedIds = new Set<string>();
  const selectAll = document.getElementById('select-all') as HTMLInputElement;
  const bulkDeleteBtn = document.getElementById('bulk-delete-btn') as HTMLButtonElement;
  const selectedCount = document.getElementById('selected-count') as HTMLSpanElement;
  const mediaSelects = document.querySelectorAll('.media-select') as NodeListOf<HTMLInputElement>;

  // Update UI based on selection
  function updateSelectionUI() {
    const count = selectedIds.size;
    if (selectedCount) selectedCount.textContent = String(count);
    if (bulkDeleteBtn) {
      if (count > 0) {
        bulkDeleteBtn.classList.remove('hidden');
        bulkDeleteBtn.classList.add('flex');
      } else {
        bulkDeleteBtn.classList.add('hidden');
        bulkDeleteBtn.classList.remove('flex');
      }
    }
    // Update select all checkbox
    if (selectAll) {
      selectAll.checked = count > 0 && count === mediaSelects.length;
      selectAll.indeterminate = count > 0 && count < mediaSelects.length;
    }
  }

  // Individual checkbox change
  mediaSelects.forEach(cb => {
    cb.addEventListener('change', () => {
      const id = cb.value;
      if (cb.checked) {
        selectedIds.add(id);
      } else {
        selectedIds.delete(id);
      }
      updateSelectionUI();
    });
  });

  // Select all checkbox
  if (selectAll) {
    selectAll.addEventListener('change', () => {
      mediaSelects.forEach(cb => {
        cb.checked = selectAll.checked;
        const id = cb.value;
        if (selectAll.checked) {
          selectedIds.add(id);
        } else {
          selectedIds.delete(id);
        }
      });
      updateSelectionUI();
    });
  }

  // Single delete functionality
  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.stopPropagation();
      const id = btn.getAttribute('data-id');
      if (!id || !confirm('Delete this file?')) return;

      try {
        const res = await fetch(`/api/admin/media/${id}`, {
          method: 'DELETE',
          credentials: 'include',
          headers: {
            'X-CSRF-Token': getCsrfToken()
          }
        });

        if (res.ok) {
          const card = btn.closest('[data-media-id]');
          if (card) card.remove();
          selectedIds.delete(id);
          updateSelectionUI();
        } else {
          alert('Failed to delete');
        }
      } catch {
        alert('Failed to delete');
      }
    });
  });

  // Bulk delete functionality
  if (bulkDeleteBtn) {
    bulkDeleteBtn.addEventListener('click', async () => {
      const ids = Array.from(selectedIds);
      if (ids.length === 0) return;

      const force = confirm(`Delete ${ids.length} selected item(s)?\n\nClick OK to delete all, Cancel to skip items in use.`);

      try {
        const res = await fetch('/api/admin/media/bulk-delete', {
          method: 'DELETE',
          credentials: 'include',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': getCsrfToken()
          },
          body: JSON.stringify({ ids, force })
        });

        const result = await res.json();

        if (res.ok) {
          // Remove deleted items from UI
          result.results?.deleted?.forEach((id: string) => {
            const card = document.querySelector(`[data-media-id="${id}"]`);
            if (card) card.remove();
          });

          // Show results
          const deleted = result.results?.deleted?.length || 0;
          const failed = result.results?.failed?.length || 0;
          const inUse = result.results?.inUse?.length || 0;

          if (failed === 0) {
            alert(`${deleted} item(s) deleted successfully`);
          } else if (inUse > 0) {
            alert(`${deleted} deleted, ${inUse} in use (not deleted)\n\nSome items are referenced by works and cannot be deleted.`);
          } else {
            alert(`${deleted} deleted, ${failed} failed`);
          }

          // Clear selection
          selectedIds.clear();
          mediaSelects.forEach(cb => cb.checked = false);
          updateSelectionUI();

          // Reload if all deleted
          if (deleted > 0 && document.querySelectorAll('[data-media-id]').length === 0) {
            window.location.reload();
          }
        } else {
          alert(result.error || 'Bulk delete failed');
        }
      } catch (err) {
        alert('Failed to delete items');
      }
    });
  }
</script>
