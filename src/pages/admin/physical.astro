---
/**
 * Physical Works Manager — Manage paintings, sculptures, and physical artifacts
 * Data from database (works where category = 'physical').
 */

export const prerender = false;

import Layout from '@layouts/Layout.astro';
import { checkAdminAuth } from '@lib/admin-auth';
import { getWorksByCategory } from '@lib/db/queries';

const auth = checkAdminAuth(Astro.request);
if (!auth.valid) {
  return Astro.redirect('/admin/login');
}

const dbWorks = await getWorksByCategory('physical');
const physicalWorks = dbWorks.map((w) => {
  const primaryImage = w.media.find((m) => m.isPrimary || m.type === 'image') || w.media[0];
  return {
    id: w.id,
    slug: w.slug,
    title: w.title,
    year: w.year ?? new Date().getFullYear(),
    forSale: w.forSale ?? false,
    image: primaryImage?.url ?? '',
  };
});
---

<Layout title="Physical Works - she_skin Admin">
  <div class="min-h-screen bg-gray-50" x-data="physicalManager()">
    {/* Header */}
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center gap-4">
            <a href="/admin" class="text-gray-600 hover:text-gray-900">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
            </a>
            <h1 class="text-xl font-bold text-gray-900">Physical Works</h1>
            <span class="text-sm text-gray-500" x-text="`${items.length} works`"></span>
          </div>
          <div class="flex items-center gap-3">
            <a
              href="/admin/physical/edit/new"
              class="px-4 py-2 text-sm font-medium text-white bg-black hover:bg-gray-800 rounded-md transition-colors flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Add Work
            </a>
          </div>
        </div>
      </div>
    </header>

    <div class="flex">
      {/* Sidebar - Admin nav + Filters */}
      <aside class="w-64 bg-white border-r border-gray-200 min-h-screen sticky top-16 p-4">
        <nav class="mb-4 pb-4 border-b border-gray-200 space-y-1">
          <a
            href="/admin"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
            </svg>
            Dashboard
          </a>
          <a
            href="/admin/audio"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
            Audio
          </a>
          <a
            href="/admin/physical"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md bg-gray-100 text-gray-900"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Physical Works
          </a>
          <a
            href="/admin/digital"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Digital
          </a>
          <a
            href="/admin/collaborations"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Collaborations
          </a>
          <a
            href="#shop"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
            Shop Products
          </a>
        </nav>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
            <input 
              type="text" 
              x-model="searchQuery"
              placeholder="Search works..."
              class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-black"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">View</label>
            <div class="flex gap-2">
              <button 
                @click="viewMode = 'grid'"
                :class="viewMode === 'grid' ? 'bg-gray-200' : 'hover:bg-gray-100'"
                class="flex-1 px-3 py-2 rounded-md text-sm transition-colors"
              >
                Grid
              </button>
              <button 
                @click="viewMode = 'list'"
                :class="viewMode === 'list' ? 'bg-gray-200' : 'hover:bg-gray-100'"
                class="flex-1 px-3 py-2 rounded-md text-sm transition-colors"
              >
                List
              </button>
            </div>
          </div>

          <div class="pt-4 border-t border-gray-200">
            <p class="text-xs text-gray-500 mb-2">Filter</p>
            <label class="flex items-center gap-2 text-sm text-gray-700">
              <input type="checkbox" x-model="showForSaleOnly" class="rounded border-gray-300" />
              For Sale Only
            </label>
          </div>
        </div>
      </aside>

      {/* Main Content */}
      <main class="flex-1 p-6">
        {/* Grid View */}
        <div 
          x-show="viewMode === 'grid'"
          class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4"
        >
          <template x-for="(item, index) in filteredItems" :key="item.id">
            <div 
              class="group bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow"
              draggable="true"
              @dragstart="dragStart(index)"
              @dragover.prevent="dragOver(index)"
              @drop="drop(index)"
            >
              {/* Image */}
              <div class="aspect-[4/5] bg-gray-100 relative">
                <img 
                  :src="item.image" 
                  :alt="item.title"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                
                {/* For Sale Badge */}
                <div x-show="item.forSale" class="absolute top-2 left-2">
                  <span class="px-2 py-1 bg-green-500 text-white text-xs rounded-full font-medium">For Sale</span>
                </div>

                {/* Hover Overlay */}
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-all flex items-center justify-center opacity-0 group-hover:opacity-100">
                  <div class="flex gap-2">
                    <a
                      :href="`/admin/physical/edit/${item.slug}`"
                      class="px-3 py-1 bg-white text-gray-900 text-sm rounded-md hover:bg-gray-100 transition-colors"
                    >
                      Edit
                    </a>
                    <button 
                      @click="deleteItem(index)"
                      class="px-3 py-1 bg-red-600 text-white text-sm rounded-md hover:bg-red-700 transition-colors"
                    >
                      Delete
                    </button>
                  </div>
                </div>
              </div>
              
              {/* Info */}
              <div class="p-3">
                <p class="text-sm font-medium text-gray-900 line-clamp-1" x-text="item.title || 'Untitled'"></p>
                <p class="text-xs text-gray-500 mt-0.5" x-text="item.year || 'Unknown Year'"></p>
              </div>
            </div>
          </template>
        </div>

        {/* List View */}
        <div 
          x-show="viewMode === 'list'"
          class="bg-white rounded-lg shadow overflow-hidden"
        >
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Image</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Year</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <template x-for="(item, index) in filteredItems" :key="item.id">
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <img 
                      :src="item.image" 
                      :alt="item.title"
                      class="w-12 h-16 object-cover rounded"
                    />
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900" x-text="item.title || 'Untitled'"></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500" x-text="item.year || '—'"></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span 
                      x-show="item.forSale"
                      class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800"
                    >
                      For Sale
                    </span>
                    <span 
                      x-show="!item.forSale"
                      class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800"
                    >
                      Not For Sale
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a :href="`/admin/physical/edit/${item.slug}`" class="text-blue-600 hover:text-blue-900 mr-3">Edit</a>
                    <button @click="deleteItem(index)" class="text-red-600 hover:text-red-900">Delete</button>
                  </td>
                </tr>
              </template>
            </tbody>
          </table>
        </div>

        {/* Empty State */}
        <div x-show="filteredItems.length === 0" class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No works found</h3>
          <p class="mt-1 text-sm text-gray-500">Add your first physical work to get started.</p>
        </div>
      </main>
    </div>

    {/* Toast */}
    <div 
      x-show="toast.visible"
      x-transition
      class="fixed bottom-4 right-4 px-6 py-3 rounded-md shadow-lg text-white z-50"
      :class="toast.type === 'success' ? 'bg-green-600' : 'bg-red-600'"
    >
      <span x-text="toast.message"></span>
    </div>
  </div>

  <script is:inline define:vars={{ initialWorks: physicalWorks }}>
    function physicalManager() {
      return {
        items: [...initialWorks],
        searchQuery: '',
        viewMode: 'grid',
        showForSaleOnly: false,
        draggingIndex: null,
        toast: { visible: false, message: '', type: 'success' },
        
        get filteredItems() {
          let filtered = this.items;
          
          if (this.searchQuery) {
            const query = this.searchQuery.toLowerCase();
            filtered = filtered.filter(item => 
              (item.title || '').toLowerCase().includes(query) ||
              (item.year || '').toString().includes(query)
            );
          }
          
          if (this.showForSaleOnly) {
            filtered = filtered.filter(item => item.forSale);
          }
          
          return filtered;
        },
        
        async deleteItem(index) {
          if (!confirm('Delete this work?')) return;
          const item = this.items[index];
          if (!item?.id) return;
          try {
            const res = await fetch(`/api/admin/works/${item.id}`, { method: 'DELETE' });
            if (!res.ok) throw new Error('Delete failed');
            this.items.splice(index, 1);
            this.showToast('Work deleted', 'success');
          } catch (e) {
            this.showToast(e.message || 'Delete failed', 'error');
          }
        },
        
        dragStart(index) {
          this.draggingIndex = index;
        },
        
        dragOver(index) {
          if (this.draggingIndex === null || this.draggingIndex === index) return;
          const item = this.items[this.draggingIndex];
          this.items.splice(this.draggingIndex, 1);
          this.items.splice(index, 0, item);
          this.draggingIndex = index;
        },
        
        drop(index) {
          this.draggingIndex = null;
        },
        
        showToast(message, type = 'success') {
          this.toast = { visible: true, message, type };
          setTimeout(() => this.toast.visible = false, 3000);
        },
      };
    }
  </script>
</Layout>
