---
/**
 * Audio Manager — Upload tracks, manage albums. Data from database.
 */

export const prerender = false;

import Layout from '@layouts/Layout.astro';
import { checkAdminAuth } from '@lib/admin-auth';
import { getAudioWorks } from '@lib/db/queries';

const auth = checkAdminAuth(Astro.request);
if (!auth.valid) {
  return Astro.redirect('/admin/login');
}

const dbAudio = await getAudioWorks();
const audioTracks = dbAudio.map((w) => {
  let artist = '';
  let album = '';
  let audioSrc = '';
  try {
    if (w.description) {
      const meta = JSON.parse(w.description) as { artist?: string; album?: string; audioSrc?: string };
      artist = meta.artist ?? '';
      album = meta.album ?? '';
      audioSrc = meta.audioSrc ?? '';
    }
  } catch {
    // ignore
  }
  const coverMedia = w.media.find((m) => m.type === 'image' || m.type === 'cover');
  const audioMedia = w.media.find((m) => m.type === 'audio');
  const duration = w.audioTrack?.[0]?.duration ?? 0;
  return {
    id: w.id,
    title: w.title,
    artist,
    album,
    year: w.year ?? new Date().getFullYear(),
    duration,
    hasAudio: !!audioMedia?.url,
    hasCover: !!coverMedia?.url,
    audioSrc: audioMedia?.url ?? audioSrc,
    coverArt: coverMedia?.url ?? '',
  };
});

const albums = ['ICT★SNU SOUND Vol. 1', 'Unreleased', 'Collaborations'];
---

<Layout title="Audio Manager - she_skin Admin">
  <div class="min-h-screen bg-gray-50" x-data="audioManager()">
    {/* Header */}
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center gap-4">
            <a href="/admin" class="text-gray-600 hover:text-gray-900">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
            </a>
            <h1 class="text-xl font-bold text-gray-900">Audio Manager</h1>
            <span class="text-sm text-gray-500" x-text="`${tracks.length} tracks`"></span>
          </div>
          <div class="flex items-center gap-3">
            <a
              href="/admin/audio/edit/new"
              class="px-4 py-2 text-sm font-medium text-white bg-black hover:bg-gray-800 rounded-md transition-colors flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Upload Track
            </a>
          </div>
        </div>
      </div>
    </header>

    <div class="flex">
      {/* Sidebar - Admin nav + Filters */}
      <aside class="w-64 bg-white border-r border-gray-200 min-h-screen sticky top-16 p-4">
        <nav class="mb-4 pb-4 border-b border-gray-200 space-y-1">
          <a
            href="/admin"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
            </svg>
            Dashboard
          </a>
          <a
            href="/admin/audio"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md bg-gray-100 text-gray-900"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
            Audio
          </a>
          <a
            href="/admin/physical"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Physical Works
          </a>
          <a
            href="/admin/collaborations"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Collaborations
          </a>
          <a
            href="#shop"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
            Shop Products
          </a>
        </nav>
        <div class="space-y-4">
          {/* Album Filter */}
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Album</label>
            <select 
              x-model="selectedAlbum"
              class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-black"
            >
              <option value="">All Albums</option>
              <template x-for="album in albums" :key="album">
                <option x-text="album" :value="album"></option>
              </template>
            </select>
          </div>

          {/* Search */}
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
            <input 
              type="text" 
              x-model="searchQuery"
              placeholder="Track or artist..."
              class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-black"
            />
          </div>

          {/* Stats */}
          <div class="pt-4 border-t border-gray-200">
            <h3 class="text-xs font-medium text-gray-500 uppercase mb-2">Storage</h3>
            <div class="space-y-1 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Total tracks:</span>
                <span class="font-medium" x-text="tracks.length"></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Total duration:</span>
                <span class="font-medium" x-text="formatTotalDuration()"></span>
              </div>
            </div>
          </div>
        </div>
      </aside>

      {/* Main Content */}
      <main class="flex-1 p-6">
        {/* Tracks Grid */}
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
          <template x-for="(track, index) in filteredTracks" :key="track.id">
            <div 
              class="group bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow"
              draggable="true"
              @dragstart="dragStart(index)"
              @dragover.prevent="dragOver(index)"
              @drop="drop(index)"
            >
              {/* Cover Art */}
              <div class="aspect-square bg-gray-100 relative">
                <img 
                  x-show="track.coverArt"
                  :src="track.coverArt || ''" 
                  :alt="track.title"
                  class="w-full h-full object-cover"
                />
                <div x-show="!track.coverArt" class="w-full h-full flex items-center justify-center text-gray-400">
                  <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                  </svg>
                </div>
                
                {/* Play Button Overlay */}
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-all flex items-center justify-center opacity-0 group-hover:opacity-100">
                  <button 
                    @click="previewTrack(track)"
                    class="w-12 h-12 bg-white rounded-full flex items-center justify-center hover:scale-105 transition-transform"
                  >
                    <svg class="w-6 h-6 text-black ml-0.5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </button>
                </div>

                {/* Audio indicator */}
                <div x-show="track.audioSrc" class="absolute top-2 right-2">
                  <span class="px-2 py-1 bg-green-500 text-white text-xs rounded-full">MP3</span>
                </div>
              </div>
              
              {/* Info */}
              <div class="p-3">
                <p class="text-sm font-medium text-gray-900 line-clamp-1" x-text="track.title || 'Untitled'"></p>
                <p class="text-xs text-gray-500 mt-0.5" x-text="track.artist || 'Unknown Artist'"></p>
                <div class="flex items-center justify-between mt-2">
                  <span class="text-xs text-gray-400" x-text="formatDuration(track.duration)"></span>
                  <div class="flex gap-1">
                    <a 
                      :href="`/admin/audio/edit/${track.id}`"
                      class="p-1 text-gray-400 hover:text-gray-600"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                      </svg>
                    </a>
                    <button 
                      @click="deleteTrack(index)"
                      class="p-1 text-gray-400 hover:text-red-600"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </template>
        </div>

        {/* Empty State */}
        <div x-show="filteredTracks.length === 0" class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No tracks found</h3>
          <p class="mt-1 text-sm text-gray-500">Upload your first audio track to get started.</p>
        </div>
      </main>
    </div>

    {/* Audio Preview Player */}
    <div 
      x-show="previewingTrack"
      x-transition
      class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg z-40"
    >
      <div class="max-w-7xl mx-auto px-4 py-3 flex items-center gap-4">
        <img 
          :src="previewTrackData?.coverArt || ''" 
          class="w-12 h-12 object-cover rounded"
        />
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900 truncate" x-text="previewTrackData?.title"></p>
          <p class="text-xs text-gray-500" x-text="previewTrackData?.artist"></p>
        </div>
        <audio 
          x-ref="audioPlayer"
          :src="previewTrackData?.audioSrc"
          controls
          class="w-64"
        ></audio>
        <button 
          @click="previewingTrack = false; $refs.audioPlayer.pause()"
          class="p-2 text-gray-400 hover:text-gray-600"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    {/* Toast */}
    <div 
      x-show="toast.visible"
      x-transition
      class="fixed bottom-4 right-4 px-6 py-3 rounded-md shadow-lg text-white z-50"
      :class="toast.type === 'success' ? 'bg-green-600' : 'bg-red-600'"
    >
      <span x-text="toast.message"></span>
    </div>
  </div>

  <script is:inline define:vars={{ initialTracks: audioTracks, initialAlbums: albums }}>
    function audioManager() {
      return {
        tracks: [...initialTracks],
        albums: [...initialAlbums],
        selectedAlbum: '',
        searchQuery: '',
        previewingTrack: false,
        previewTrackData: null,
        draggingIndex: null,
        toast: { visible: false, message: '', type: 'success' },
        
        get filteredTracks() {
          let filtered = this.tracks;
          
          if (this.selectedAlbum) {
            filtered = filtered.filter(t => t.album === this.selectedAlbum);
          }
          
          if (this.searchQuery) {
            const query = this.searchQuery.toLowerCase();
            filtered = filtered.filter(t => 
              (t.title || '').toLowerCase().includes(query) ||
              (t.artist || '').toLowerCase().includes(query)
            );
          }
          
          return filtered;
        },
        
        formatDuration(seconds) {
          if (!seconds) return '0:00';
          const mins = Math.floor(seconds / 60);
          const secs = Math.floor(seconds % 60);
          return `${mins}:${secs.toString().padStart(2, '0')}`;
        },
        
        formatTotalDuration() {
          const total = this.tracks.reduce((sum, t) => sum + (t.duration || 0), 0);
          const hours = Math.floor(total / 3600);
          const mins = Math.floor((total % 3600) / 60);
          if (hours > 0) return `${hours}h ${mins}m`;
          return `${mins}m`;
        },
        
        previewTrack(track) {
          this.previewTrackData = track;
          this.previewingTrack = true;
        },
        
        async deleteTrack(index) {
          if (!confirm('Delete this track?')) return;
          const track = this.tracks[index];
          if (!track?.id) return;
          try {
            const res = await fetch(`/api/admin/works/${track.id}`, { method: 'DELETE' });
            if (!res.ok) throw new Error('Delete failed');
            this.tracks.splice(index, 1);
            this.showToast('Track deleted', 'success');
          } catch (e) {
            this.showToast(e?.message || 'Delete failed', 'error');
          }
        },
        
        dragStart(index) {
          this.draggingIndex = index;
        },
        
        dragOver(index) {
          if (this.draggingIndex === null || this.draggingIndex === index) return;
          const track = this.tracks[this.draggingIndex];
          this.tracks.splice(this.draggingIndex, 1);
          this.tracks.splice(index, 0, track);
          this.draggingIndex = index;
        },
        
        drop(index) {
          this.draggingIndex = null;
        },
        
        showToast(message, type = 'success') {
          this.toast = { visible: true, message, type };
          setTimeout(() => this.toast.visible = false, 3000);
        },
      };
    }
  </script>
</Layout>
