/**
 * Admin Login — Database-backed authentication
 */

export const prerender = false;

import Layout from '@layouts/Layout.astro';
import { checkAdminAuth, verifyAdminCredentials, createSessionCookie, hashPassword } from '@lib/admin-auth';
import { db } from '@lib/db';
import { users } from '@lib/db/schema';

// Check if already logged in
const auth = await checkAdminAuth(Astro.request);
if (auth.valid) {
  return Astro.redirect('/admin');
}

const sessionExpired = Astro.url.searchParams.get('session') === 'expired';
const sessionReason = Astro.url.searchParams.get('reason') ?? '';
let error = '';

// Handle POST
if (Astro.request.method === 'POST') {
  const debugLogin = import.meta.env.DEV;
  if (debugLogin) {
    console.debug('[admin/login] POST received');
  }

  try {
    const formData = await Astro.request.formData();
    const username = (formData.get('username')?.toString() ?? '').trim();
    const password = (formData.get('password')?.toString() ?? '').trim();

    if (debugLogin) {
      console.debug('[admin/login] Form: username present=', !!username, 'password length=', password.length);
    }

    if (!username || !password) {
      if (debugLogin) console.debug('[admin/login] Rejected: missing username or password');
      error = 'Username and password are required';
    } else {
      const result = await verifyAdminCredentials(username, password);

      if (debugLogin) {
        console.debug('[admin/login] verifyAdminCredentials result: valid=', result.valid, 'userId=', result.userId ?? '(none)');
      }

      if (result.valid && result.userId) {
        // Use 200 + HTML redirect instead of 302 so browsers reliably store Set-Cookie
        // (some browsers don't persist cookies set on redirect responses)
        const { name, value } = createSessionCookie(result.userId);
        const maxAge = 60 * 60 * 24;
        const secure = import.meta.env.PROD;
        const cookieParts = [
          `${name}=${value}`,
          'Path=/',
          'Max-Age=' + maxAge,
          'HttpOnly',
          'SameSite=Lax',
        ];
        if (secure) cookieParts.push('Secure');
        const setCookie = cookieParts.join('; ');

        if (debugLogin) {
          console.debug('[admin/login] Session cookie set, redirecting to /admin');
        }

        // Give the browser a moment to persist the cookie before navigating (fixes no_cookie on subsequent fetch)
        const html = `<!DOCTYPE html><html><head><meta charset="utf-8"><title>Signing in…</title></head><body><p>Signing in…</p><script>setTimeout(function(){ window.location.replace('/admin'); }, 150);</script><a href="/admin">Continue</a></body></html>`;
        return new Response(html, {
          status: 200,
          headers: {
            'Content-Type': 'text/html; charset=utf-8',
            'Cache-Control': 'no-store',
            'Set-Cookie': setCookie,
          },
        });
      } else {
        if (debugLogin) console.debug('[admin/login] Rejected: invalid credentials');
        error = 'Invalid username or password';
      }
    }
  } catch (e) {
    const msg = e instanceof Error ? e.message : 'Unknown error';
    console.error('[admin/login] Login error:', e);
    if (debugLogin) {
      console.debug('[admin/login] Caught error:', msg);
    }
    if (import.meta.env.DEV) {
      error = `Error: ${msg}`;
    } else {
      error = 'An error occurred. Please try again.';
    }
  }
}
---

<Layout title="Admin Login - she_skin">
  <div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          she_skin Admin
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
          Media Management Dashboard
        </p>
      </div>
      
      <form class="mt-8 space-y-6" method="POST" action="/admin/login" data-astro-reload>
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <label for="username" class="sr-only">Username</label>
            <input
              id="username"
              name="username"
              type="text"
              required
              autocomplete="username"
              class="appearance-none rounded-t-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-black focus:border-black focus:z-10 sm:text-sm"
              placeholder="Username"
            />
          </div>
          <div>
            <label for="password" class="sr-only">Password</label>
            <input
              id="password"
              name="password"
              type="password"
              autocomplete="current-password"
              required
              class="appearance-none rounded-b-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-black focus:border-black focus:z-10 sm:text-sm"
              placeholder="Password"
            />
          </div>
        </div>

        {(sessionExpired || error) && (
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">{sessionExpired ? (sessionReason ? `Session issue: ${sessionReason}. Please sign in again.` : 'Your session expired or was not recognized. Please sign in again.') : error}</h3>
              </div>
            </div>
          </div>
        )}

        <div>
          <button
            type="submit"
            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-black hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black transition-colors"
          >
            Sign in
          </button>
        </div>
      </form>
      
      <div class="text-center space-y-2">
        <a href="/admin/forgot-password" class="text-sm text-black hover:text-gray-600 block">
          Forgot password?
        </a>
        <a href="/" class="text-sm text-gray-400 hover:text-gray-600 block">
          ← Back to site
        </a>
      </div>
    </div>
  </div>
</Layout>
