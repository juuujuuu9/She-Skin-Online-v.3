---
import Layout from '@layouts/Layout.astro';
---

<Layout title="About - she_skin">
  <main class="min-h-screen bg-white">
    {/* Header */}
    <header class="px-6 pt-16">
      <div class="w-full">
        <h1 class="sm:text-2xl text-[13px] font-bold tracking-tight text-black mb-4">
          About
        </h1>
        <p class="text-sm text-gray-500 max-w-xl">
          Artist portfolio and online shop.
        </p>
      </div>
    </header>

    {/* Content */}
    <section class="px-6 py-12">
      <div class="w-full prose prose-lg">
        <p class="text-gray-600 leading-relaxed">
          she_skin is an artist portfolio and online shop. This page is under construction.
        </p>
      </div>
    </section>
  </main>
</Layout>
