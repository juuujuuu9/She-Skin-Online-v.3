---
/**
 * Works Archive — Category-based portfolio grid
 * 
 * Routes:
 *   /works/audio          → Audio works archive
 *   /works/physical       → Physical works archive (from public/media/physical)
 *   /works/digital        → Digital works archive (from public/media/digital)
 *   /works/collaborations → Collaboration archive
 */

import { getCollection } from 'astro:content';
import { readdirSync } from 'fs';
import { join } from 'path';
import OptimizedImage from '@components/ui/OptimizedImage.astro';
import Layout from '@layouts/Layout.astro';
import { WorksGrid } from '@components/WorksGrid';
import { WorksGridControls } from '@components/WorksGridControls';
import { collaborationsGridItems } from '../../data/collaborations';

export async function getStaticPaths() {
  const categories = ['audio', 'physical', 'digital', 'collaborations'] as const;

  function getDigitalGridItems() {
    const digitalDir = join(process.cwd(), 'public', 'media', 'digital');
    try {
      const files = readdirSync(digitalDir)
        .filter((f) => f.endsWith('.webp'))
        .sort()
        .reverse();
      return files.map((file) => {
        const slug = file.replace(/\.webp$/i, '');
        return {
          slug,
          forSale: false,
          image: { src: `/media/digital/${file}`, alt: slug },
          href: '#',
        };
      });
    } catch {
      return [];
    }
  }

  function getPhysicalGridItems() {
    const physicalDir = join(process.cwd(), 'public', 'media', 'physical');
    try {
      const files = readdirSync(physicalDir)
        .filter((f) => f.endsWith('.webp'))
        .sort()
        .reverse();
      return files.map((file) => {
        const slug = file.replace(/\.webp$/i, '');
        return {
          slug,
          forSale: false,
          image: { src: `/media/physical/${file}`, alt: slug },
          href: '#',
        };
      });
    } catch {
      return [];
    }
  }

  const gridItemType = { slug: '', forSale: false, image: null as { src: string; alt: string } | null, href: '#' as string | undefined };
  type GridItem = typeof gridItemType & { title?: string; year?: number };

  return categories.map((category) => {
    const props: { category: (typeof categories)[number]; digitalGridItems?: GridItem[]; physicalGridItems?: GridItem[] } = { category };
    if (category === 'digital') {
      props.digitalGridItems = getDigitalGridItems();
    }
    if (category === 'physical') {
      props.physicalGridItems = getPhysicalGridItems();
    }
    return { params: { category }, props };
  });
}

const { category } = Astro.params;
const { category: categoryProp, digitalGridItems, physicalGridItems } = Astro.props;

// Digital and physical: use images from public/media; others use content collection
const isDigital = categoryProp === 'digital';
const isPhysical = categoryProp === 'physical';
const allWorks = isDigital || isPhysical ? [] : await getCollection('works', (entry) => entry.data.category === categoryProp);

// Sort by date (newest first)
const works = allWorks.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Get featured works first
const featuredWorks = works.filter((w) => w.data.featured);
const regularWorks = works.filter((w) => !w.data.featured);

// Category display config
const categoryConfig = {
  audio: {
    title: 'ICT★SNU SOUND',
    subtitle: 'Audio works and music productions',
    layout: 'list', // List view for audio (shows waveform)
  },
  physical: {
    title: 'Physical Works',
    subtitle: 'Paintings, sculptures, and physical artifacts',
    layout: 'grid', // Grid view for visual art
  },
  digital: {
    title: 'Digital',
    subtitle: 'Digital art and new media',
    layout: 'grid',
  },
  collaborations: {
    title: 'Collaborations',
    subtitle: 'Projects with other artists and collectives',
    layout: 'grid',
  },
};

const config = categoryConfig[categoryProp];

// Digital, physical, and collaborations use the adjustable grid with +/- controls
const useWorksGrid = categoryProp === 'digital' || categoryProp === 'physical' || categoryProp === 'collaborations';
const worksGridItems = useWorksGrid
  ? isDigital
    ? (digitalGridItems ?? [])
    : isPhysical
      ? (physicalGridItems ?? [])
      : categoryProp === 'collaborations'
        ? collaborationsGridItems
        : regularWorks.map((w) => ({
          slug: w.data.slug,
          title: w.data.title,
          year: w.data.date.getFullYear(),
          forSale: w.data.forSale ?? false,
          image:
            w.data.coverImage && w.data.media?.[0]?.type === 'image'
              ? { src: w.data.media[0].src, alt: w.data.media[0].alt }
              : null,
        }))
  : [];
---

<Layout title={`${config.title} - she_skin`}>
  <main class="min-h-screen bg-white">
    {/* Header */}
    <header class="px-6 pt-16">
      <div class="w-full flex items-start justify-between gap-4">
        <div class="min-w-0">
          <h1 class="sm:text-2xl text-[13px] font-bold tracking-tight text-black mb-4">
            {config.title}
          </h1>
          <p class="text-sm text-gray-500 max-w-xl">
            {config.subtitle}
          </p>
        </div>
        {useWorksGrid ? <div class="w-12 shrink-0" aria-hidden="true" /> : null}
        {useWorksGrid && (
          <WorksGridControls
            client:load
            defaultColsDesktop={categoryProp === 'digital' || categoryProp === 'physical' || categoryProp === 'collaborations' ? 6 : undefined}
            defaultColsMobile={categoryProp === 'digital' || categoryProp === 'physical' || categoryProp === 'collaborations' ? 3 : undefined}
          />
        )}
      </div>
    </header>

    {/* Featured Works */}
    {featuredWorks.length > 0 && (
      <section class="px-6 pt-6 pb-12 bg-gray-50">
        <div class="w-full">
          <h2 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-8">
            Featured
          </h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
            {featuredWorks.map((work) => (
              <a 
                href={`/works/${work.data.slug}`}
                class="group block bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow"
              >
                {work.data.coverImage && work.data.media?.[0]?.type === 'image' && (
                  <div class="aspect-[4/3] overflow-hidden">
                    <OptimizedImage
                      src={work.data.media[0].src}
                      alt={work.data.media[0].alt}
                      variants={work.data.media[0].variants}
                      blurhash={work.data.media[0].blurhash}
                      dominantColor={work.data.media[0].dominantColor}
                      width={work.data.media[0].width}
                      height={work.data.media[0].height}
                      aspectRatio={work.data.media[0].width / work.data.media[0].height}
                      class="group-hover:scale-105 transition-transform duration-500"
                    />
                  </div>
                )}
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-900 group-hover:text-gray-700">
                    {work.data.title}
                  </h3>
                  <time class="text-sm text-gray-500 mt-2 block">
                    {work.data.date.getFullYear()}
                  </time>
                  {work.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mt-3">
                      {work.data.tags.slice(0, 3).map((tag) => (
                        <span class="text-xs px-2 py-1 bg-gray-100 text-gray-600 rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    {/* Main Grid/List */}
    <section class="px-6 pt-6 pb-12">
      <div class="w-full">
        {useWorksGrid ? (
          <WorksGrid
            client:load
            works={worksGridItems}
            titleClassName={categoryProp === 'collaborations' ? 'text-[13px] font-medium text-gray-900 group-hover:text-gray-700 line-clamp-2' : undefined}
            defaultColsDesktop={categoryProp === 'digital' || categoryProp === 'physical' || categoryProp === 'collaborations' ? 6 : undefined}
            defaultColsMobile={categoryProp === 'digital' || categoryProp === 'physical' || categoryProp === 'collaborations' ? 3 : undefined}
          />
        ) : config.layout === 'grid' ? (
          /* Grid Layout for physical (fixed grid) */
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            {regularWorks.map((work) => (
              <a 
                href={`/works/${work.data.slug}`}
                class="group block"
              >
                <div class="aspect-square overflow-hidden rounded-lg bg-gray-100 mb-4">
                  {work.data.coverImage && work.data.media?.[0]?.type === 'image' ? (
                    <OptimizedImage
                      src={work.data.media[0].src}
                      alt={work.data.media[0].alt}
                      variants={work.data.media[0].variants}
                      blurhash={work.data.media[0].blurhash}
                      dominantColor={work.data.media[0].dominantColor}
                      width={work.data.media[0].width}
                      height={work.data.media[0].height}
                      aspectRatio={1}
                      objectFit="cover"
                      class="group-hover:scale-105 transition-transform duration-500"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                      <span class="text-sm">No image</span>
                    </div>
                  )}
                </div>
                <h3 class="font-medium text-gray-900 group-hover:text-gray-700 line-clamp-2">
                  {work.data.title}
                </h3>
                <time class="text-sm text-gray-500">
                  {work.data.date.getFullYear()}
                </time>
                {work.data.forSale && (
                  <span class="inline-block mt-2 text-xs px-2 py-1 bg-green-100 text-green-700 rounded">
                    For Sale
                  </span>
                )}
              </a>
            ))}
          </div>
        ) : (
          /* List Layout for audio */
          <div class="space-y-4">
            {regularWorks.map((work) => (
              <a 
                href={`/works/${work.data.slug}`}
                class="group flex items-center gap-4 p-4 bg-white border border-gray-100 rounded-lg hover:border-gray-200 hover:bg-gray-50 transition-colors"
              >
                {/* Cover or placeholder */}
                <div class="w-20 h-20 flex-shrink-0 rounded bg-gray-100 overflow-hidden">
                  {work.data.coverImage && work.data.media?.[0]?.type === 'image' ? (
                    <OptimizedImage
                      src={work.data.media[0].src}
                      alt={work.data.media[0].alt}
                      variants={work.data.media[0].variants}
                      blurhash={work.data.media[0].blurhash}
                      width={work.data.media[0].width}
                      height={work.data.media[0].height}
                      aspectRatio={1}
                      objectFit="cover"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center">
                      <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M18 3a1 1 0 00-1.447-.894L8.763 6H5a3 3 0 000 6h.28l1.771 5.316A1 1 0 008 18h1a1 1 0 001-1v-4.382l6.553 3.276A1 1 0 0018 15V3z" />
                      </svg>
                    </div>
                  )}
                </div>
                
                {/* Info */}
                <div class="flex-1 min-w-0">
                  <h3 class="font-medium text-gray-900 group-hover:text-gray-700 truncate">
                    {work.data.title}
                  </h3>
                  <time class="text-sm text-gray-500">
                    {work.data.date.getFullYear()}
                  </time>
                  
                  {/* Mini waveform visualization */}
                  {work.data.media?.[0]?.type === 'audio' && work.data.media[0].waveform && (
                    <div class="mt-2 h-6 flex items-center gap-px opacity-50 group-hover:opacity-100 transition-opacity">
                      {/* Waveform bars would be rendered here using the waveform JSON */}
                      <span class="text-xs text-gray-400">Audio track</span>
                    </div>
                  )}
                </div>
                
                {/* Arrow */}
                <svg class="w-5 h-5 text-gray-400 group-hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            ))}
          </div>
        )}
      </div>
    </section>

    {/* Empty State */}
    {works.length === 0 && !(isDigital && (digitalGridItems?.length ?? 0) > 0) && !(isPhysical && (physicalGridItems?.length ?? 0) > 0) && (
      <div class="px-6 py-20 text-center">
        <p class="text-gray-500">No works in this category yet.</p>
      </div>
    )}
  </main>
</Layout>
