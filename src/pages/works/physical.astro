---
/**
 * Physical Works â€” Styled like the audio page with grid of placeholders.
 * Grid items use aspect ratio 4/5.
 */
import Layout from '@layouts/Layout.astro';
import { PhysicalGrid } from '@components/PhysicalGrid';
import { PhysicalGridControls } from '@components/PhysicalGridControls';
---

<Layout title="Physical Works - she_skin">
  <main class="min-h-screen bg-white">
    <header class="px-6 pt-8 md:pt-8">
      <div class="w-full flex items-start justify-between gap-4">
        <div class="min-w-0">
          <h1 class="sm:text-2xl text-[13px] font-bold tracking-tight text-black mb-4">
            Physical Works
          </h1>
          <p class="text-sm text-gray-500 max-w-xl">
            Paintings, sculptures, and physical artifacts.
          </p>
        </div>
        <div class="w-12 shrink-0" aria-hidden="true" />
        <PhysicalGridControls client:load />
      </div>
    </header>

    <section class="px-6 pt-8 py-12">
      <PhysicalGrid client:load count={24} />
    </section>
  </main>
</Layout>
